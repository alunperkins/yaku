<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sense_list_item_arrowhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingEnd="5dp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/sense_list_item_layout_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="flex_end"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/sense_list_item_poss"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_miscs"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_fields"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_restrs"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_infos"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_dialects"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_loan_sources"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_glosses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/sense_list_item_xrefs"
            style="@style/text_flex_item_optional" />

        <TextView
            android:id="@+id/sense_list_item_antonyms"
            style="@style/text_flex_item_optional" />

    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/sense_list_item_layout_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sense_list_item_verbose_poss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_miscs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_restrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_dialects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_loan_sources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_glosses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_xrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sense_list_item_verbose_antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

