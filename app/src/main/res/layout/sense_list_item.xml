<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:alignItems="flex_end"
    app:flexWrap="wrap">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet_1" />

    <TextView
        android:id="@+id/sense_list_item_poss"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_miscs"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_fields"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_restrs"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_infos"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_dialects"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_loan_sources"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_glosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/sense_list_item_xrefs"
        style="@style/text_flex_item_optional" />

    <TextView
        android:id="@+id/sense_list_item_antonyms"
        style="@style/text_flex_item_optional" />

</com.google.android.flexbox.FlexboxLayout>